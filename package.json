{
  "name": "condition-npm",
  "version": "0.0.0-semantically-released",
  "description": "run arbitrary npm script before publishing a new version",
  "bugs": {
    "url": "https://github.com/thiagofelix/condition-npm/issues"
  },
  "homepage": "https://github.com/thiagofelix/condition-npm#readme",
  "keywords": [
    "publish",
    "release",
    "semantic-release"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagofelix/condition-npm.git"
  },
  "scripts": {
    "hello-world": "echo 'hello world'",
    "commit": "git-cz",
    "lint": "standard src test",
    "pretest": "npm run lint src",
    "test": "mocha --compilers js:babel-core/register -r babel-polyfill",
    "prebuild": "npm run test",
    "build": "babel src --out-dir lib",
    "prerelease": "semantic-release pre",
    "postrelease": "semantic-release post",
    "release": "npm publish"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "npm": "^3.8.2"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "commitizen": "^2.7.2",
    "cz-conventional-changelog": "^1.1.5",
    "mocha": "^2.4.5",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.3",
    "standard": "^6.0.8"
  }
}
